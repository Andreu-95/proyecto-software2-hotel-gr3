<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Realizar Reservación</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Reservación
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <!-- Nav tabs -->
                    <ul class="nav nav-pills">
                        <li class="disabled"><a href="#criterios" data-toggle="tab">Criterios de Búsqueda</a>
                        </li>
                        <li class="active"><a href="#seleccion" data-toggle="tab">Seleccionar Habitación</a>
                        </li>
                        <li class="disabled"><a href="#datos" data-toggle="tab">Ingresar Datos</a>
                        </li>
                        <li class="disabled"><a href="#registrar" data-toggle="tab">Registrar Reservación</a>
                        </li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane fade" id="criterios">
                        </div>
                        <div class="tab-pane fade in active" id="seleccion">
                            <h4>Seleccione una de nuestras habitaciones disponibles:</h4>
                            <div class="row">
                                <div class="container">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Número</th>
                                                <th>Piso</th>
                                                <th>Tipo</th>
                                                <th>Desayuno</th>
                                                <th>WiFi</th>
                                                <th>Buena Vista</th>
                                                <th>Precio</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (typeof habitaciones != "undefined") { %>
                                                <% _.each(habitaciones, function (habitacion) { %>
                                                    <% if (habitacion.estado == 1) { %>
                                                        <tr>
                                                            <td>
                                                                <%= habitacion.id %>
                                                            </td>
                                                            <td>
                                                                <%= habitacion.piso %>
                                                            </td>
                                                            <td>
                                                                <%= habitacion.tipo %>
                                                            </td>
                                                            <td>
                                                                <% if (habitacion.desayuno == 1) { %>
                                                                Incluido
                                                                <% } else { %>
                                                                No Incluido
                                                                <% } %>
                                                            </td>
                                                            <td>
                                                                <% if (habitacion.wifi == 1) { %>
                                                                Sí
                                                                <% } else { %>
                                                                No
                                                                <% } %>
                                                            </td>
                                                            <td>
                                                                <% if (habitacion.buena_vista == 1) { %>
                                                                Sí
                                                                <% } else { %>
                                                                No
                                                                <% } %>
                                                            </td>
                                                            <td>
                                                                <%= habitacion.precio %>
                                                            </td>
                                                        </tr>
                                                    <% } %>
                                                <% }) %>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="datos">
                                <h4>Messages Tab</h4>
